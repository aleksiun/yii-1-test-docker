FROM php:5.6-apache

RUN apt-get update \
    && apt-get -y --no-install-recommends install apt-utils libzip-dev libxml2-dev gnupg apt-transport-https libpng-dev

RUN docker-php-ext-install mysqli pdo pdo_mysql gd

RUN apt-get install libmcrypt-dev

RUN pecl install mcrypt-1.0.4 && docker-php-ext-enable mcrypt